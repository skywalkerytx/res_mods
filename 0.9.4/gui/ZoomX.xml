<ZoomX.xml>
    <!--
        "True" enable Multistage zoom in sniper mode. "False" disables (default).
    --> 
    <zoomX>False</zoomX>
	
    <!--
        Up to 10 steps can be configured, separate each one with "SPACE" key. No higher than 30x (default 2 4 8).
    --> 
    <zooms>1 2 3 5 8 12 17 23 30</zooms>
</ZoomX.xml>
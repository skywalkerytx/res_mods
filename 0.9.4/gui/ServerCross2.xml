<ServerCross.xml>
  <arcadeMode>
    <clientGunMarker>
      <enable>True</enable>
      <alwaysVisible>False</alwaysVisible>
      <serverSide>False</serverSide>
    </clientGunMarker>
    <serverGunMarker>
      <enable>True</enable>
      <alwaysVisible>False</alwaysVisible>
      <texture>gui/maps/ingame/aim/gun_marker_blue.dds</texture>
      <size>64 64</size>
      <elems>
        <top>
          <mapping>13 0 26 13</mapping>
          <size>13 13</size>
        </top>
        <right>
          <mapping>26 0 39 13</mapping>
          <size>13 13</size>
        </right>
        <bottom>
          <mapping>39 0 52 13</mapping>
          <size>13 13</size>
        </bottom>
        <left>
          <mapping>0 0 13 13</mapping>
          <size>13 13</size>
        </left>
        <center>
          <mapping>0 13 21 34</mapping>
          <size>21 21</size>
        </center>
      </elems>
    </serverGunMarker>
  </arcadeMode>
  <strategicMode>
    <clientGunMarker>
      <enable>True</enable>
      <alwaysVisible>False</alwaysVisible>
      <serverSide>False</serverSide>
    </clientGunMarker>
    <serverGunMarker>
      <enable>True</enable>
      <alwaysVisible>False</alwaysVisible>
      <useTextureGunMarker>True</useTextureGunMarker>
      <texture>gui/maps/ingame/aim/gun_marker_blue.dds</texture>
      <size>64 64</size>
      <elems>
        <top>
          <mapping>13 0 26 13</mapping>
          <size>13 13</size>
        </top>
        <right>
          <mapping>26 0 39 13</mapping>
          <size>13 13</size>
        </right>
        <bottom>
          <mapping>39 0 52 13</mapping>
          <size>13 13</size>
        </bottom>
        <left>
          <mapping>0 0 13 13</mapping>
          <size>13 13</size>
        </left>
        <center>
          <mapping>0 13 21 34</mapping>
          <size>21 21</size>
        </center>
      </elems>
    </serverGunMarker>
  </strategicMode>
  <sniperMode>
    <clientGunMarker>
      <enable>True</enable>
      <alwaysVisible>False</alwaysVisible>
      <serverSide>False</serverSide>
    </clientGunMarker>
    <serverGunMarker>
      <enable>True</enable>
      <alwaysVisible>False</alwaysVisible>
      <texture>gui/maps/ingame/aim/gun_marker_blue.dds</texture>
      <size>64 64</size>
      <elems>
        <top>
          <mapping>13 0 26 13</mapping>
          <size>13 13</size>
        </top>
        <right>
          <mapping>26 0 39 13</mapping>
          <size>13 13</size>
        </right>
        <bottom>
          <mapping>39 0 52 13</mapping>
          <size>13 13</size>
        </bottom>
        <left>
          <mapping>0 0 13 13</mapping>
          <size>13 13</size>
        </left>
        <center>
          <mapping>0 13 21 34</mapping>
          <size>21 21</size>
        </center>
      </elems>
    </serverGunMarker>
    <!--
		Enable or disable Sniper mode Scope Shadow.
        <noBinoculars>True</noBinoculars> disabled. 
		<noBinoculars>False</noBinoculars> enabled (default). 
    --> 
    <noBinoculars>True</noBinoculars>

    <!--
        Resize option for Scope Shadow.
        Works only if set: <noBinoculars>False</noBinoculars>
        <resizeViewport>True</resizeViewport> - Enabled
        <resizeViewport>False</resizeViewport> - Disabled
    -->
    <resizeViewport>True</resizeViewport>
    
	<!--
        Resize viewport of scope shadow in percentage of total video resolution. 
		1.0 is 100% of visible viewport.
		0.5 is 50% of visible viewport (default).
    -->
    <viewportSize>1.0 1.0</viewportSize>
  </sniperMode>
</ServerCross.xml>
<ModificationDestructible>
	
	<!-- Состояние модификации по умолчанию -->
	<minimapEnable>1</minimapEnable>
	<!-- Параметры: 0 — деактивировать, 1 — активировать -->
	
	<!-- Вариант режима отображения разрушений объектов-->
	<minimapRegime>1</minimapRegime>
	<!-- Параметры: 1 — стандартный , 2 — только маркеры -->
	
	<!-- Клавиша активации / деактивации модификации -->
	<minimapButton>KEY_F2</minimapButton>
	<!-- Параметры: для полной деактивации нужно удалить строку -->
	
	<!-- Вариант отображения маркера отметок по умолчанию -->
	<minimapMarker>1</minimapMarker>
	<!-- Параметры: 1 — стандартный, 2 — подключить из Minimap -->
	
	<!-- Вариант красной пульсации по умолчанию -->
	<minimapPulses>2</minimapPulses>
	<!-- Параметры: 0 — деактивировать, предустановлено от 1 до 13 -->
	
	<!-- Вариант звукового оповещения отметок по умолчанию -->
	<minimapNotice>0</minimapNotice>
	<!-- Параметры: 0 — деактивировать, предустановлено от 1 до 5 -->
	
	<!-- Дальность включения маркера и индикатора направления -->
	<vehicleSquare>300</vehicleSquare>
	<!-- Параметры: любое число в метрах (рекомендуется от 150 до 400) -->
	
	<!-- Вариант отображения индикатора маркера по умолчанию -->
	<vehicleMarker>2</vehicleMarker>
	<!-- Параметры: 0 — деактивировать, предустановлено от 1 до 2 -->
	
	<!-- Вариант цвета отображения индикатора направления по умолчанию -->
	<vehicleDetect>1</vehicleDetect>
	<!-- Параметры: 0 — деактивировать, предустановлено от 1 до 3 -->
	
	<!-- Вариант отображения отметок на миникарте -->
	<minimapMethod>2</minimapMethod>
	<!-- Параметры: 1 — статический  режим, 2 — динамический режим -->
	
	<!-- Чувствительности отметок по умолчанию -->
	<minimapLength>30</minimapLength>
	<!-- Параметры: любое число в метрах (рекомендуется от 25 до 40) -->
	
	<!-- Таймер задержки выполнения обратной функции (влияет на FPS) -->
	<callmapUpdate>0.5</callmapUpdate>
	<!-- Параметры: любое число в секундах (рекомендуется от 0.1 до 1.5) -->
	
	<!-- Значение таймера удаления отметок на миникарте -->
	<minimapRemain>15</minimapRemain>
	<!-- Параметры: любое число в секундах (рекомендуется от 10 до 15) -->
	
</ModificationDestructible>